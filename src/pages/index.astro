---
import Layout from '../layouts/Layout.astro';
import DrawingCanvas from '../components/DrawingCanvas.jsx';

const links = [
  { name: "note", url: "https://note.com/izu_is_me", style: "black" },
  { name: "GitHub", url: "https://github.com/IZUisMe", style: "black" },
  { name: "Twitter", url: "https://twitter.com/IZU_isMe", style: "black" },
  { name: "Bluesky", url: "https://bsky.app/profile/izuisme.bsky.social", style: "black" },
  { name: "YouTube", url: "https://youtube.com/@IZUisMe", style: "black" },
  { name: "しずかなインターネット", url: "https://sizu.me/izu_is_me", style: "outline" },
];
---

<Layout title="IZUisME">
	<DrawingCanvas client:only="solid" />

	<main class="relative z-10 min-h-screen flex flex-col items-center justify-center py-12 px-4 font-sans pointer-events-none">
		
		<h1 class="text-white text-3xl font-bold mb-10 tracking-wider drop-shadow-sm pointer-events-auto font-logo">
			IZUisME
		</h1>

		<div class="flex flex-col gap-4 w-full max-w-[320px] mb-16 pointer-events-auto">
			{links.map((link) => (
				<a 
					href={link.url}
					target="_blank"
					class:list={[
						"block w-full py-3 text-center font-bold text-sm transition-opacity hover:opacity-80 font-link",
						link.style === "black" 
							? "bg-black text-white shadow-md" 
							: "border border-gray-600 text-black bg-transparent"
					]}
				>
					{link.name}
				</a>
			))}
		</div>

		<footer class="text-center pointer-events-auto">
			<p class="text-2xl font-medium tracking-widest text-black mb-1 font-logo">
				IZU_isMe
			</p>
			<p class="text-[10px] text-black/70 font-link">
				The Official Site | &copy; 2025 isMe
			</p>
		</footer>

	</main>
</Layout>